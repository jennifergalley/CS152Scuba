<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.john.divesafe" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DiveSafeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SaveDiver"
            android:label="@string/title_activity_save_diver" >
        </activity>
        <activity
            android:name=".SaveSingleDive"
            android:label="@string/title_activity_save_single_dive" >
        </activity>
