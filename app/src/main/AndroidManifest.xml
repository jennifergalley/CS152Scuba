            android:label="@string/title_activity_results_screen" >
        </activity>
        <activity
            android:name=".ShowSavedDive"
            android:label="@string/title_activity_show_saved_dive" >
        </activity>
        <activity
            android:name=".ViewDives"
            android:label="ViewDives" >
        </activity>
        <activity
            android:name=".SafeDivePlanner"
            android:label="Safe Dive Planner" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

