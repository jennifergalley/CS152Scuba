<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@mipmap/scuba_blur"
    android:orientation="vertical"
    android:weightSum="1">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT TABLE"
            android:id="@+id/select_table_heading_textView11"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="40dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:gravity="center" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:gravity="center|top">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAUI (feet)"
            android:id="@+id/naui_feet_button"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="naui_feet" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAUI (meters)"
            android:id="@+id/naui_meters__button"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="naui_meters" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PADI (feet)"
            android:id="@+id/padi_feet_button"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="padi_feet" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PADI (meters)"
            android:id="@+id/padi_meters_button"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="padi_meters" />
    </LinearLayout>







</LinearLayout>

